{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "project": "$name",
            "stage": "$stage",
            "version": "$version"
        },
        "name": "$name"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "project": "$name"
            }
        },
        "strategy": {
            "rollingUpdate": {
                "maxSurge": 1,
                "maxUnavailable": 1
            },
            "type": "RollingUpdate"
        },
        "template": {
            "metadata": {
                "labels": {
                    "project": "$name",
                    "stage": "$stage",
                    "version": "$version"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "GOOGLE_APPLICATION_CREDENTIALS",
                                "value": "/external/google-creds/google-cloud-vision-creds.json"
                            }
                        ],
                        "image": "$image",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "$name",
                        "volumeMounts": [
                          {
                            "name": "google-credentials",
                            "mountPath": "/external/google-creds",
                            "readOnly": "true"
                          }
                        ],
                        "ports": [
                            {
                                "containerPort": 80,
                                "name": "http",
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "50m",
                                "memory": "500Mi"
                            },
                            "requests": {
                                "cpu": "50m",
                                "memory": "500Mi"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "volumes": [
                  {
                    "name": "google-credentials",
                    "secret": {
                      "secretName": "google-cloud-vision-creds"
                    }
                  }
                ],
                "dnsPolicy": "ClusterFirst",
                "restartPolicy": "Always",
                "securityContext": {},
                "terminationGracePeriodSeconds": 2
            }
        }
    }
}
